<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launch"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_deep"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="版本"
	        android:layout_marginLeft="16dp"
	        android:textSize="18sp"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1.0"
	        android:textSize="18sp"
	        android:layout_marginRight="16dp"
	        android:layout_alignParentRight="true"
	        />
    
    </RelativeLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_light"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_feedback"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_rg"
        >
	    <TextView 
	        android:id="@+id/tv_feedback"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="意见反馈"
	        android:layout_marginLeft="16dp"
	        android:textSize="18sp"
	        />
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_arrow"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="19dp"
	        />
    
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_deep"
        />
    
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="融360出品"
        android:textSize="18sp"
        android:textStyle="bold"
        />
     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_deep"
        />
    
     <RelativeLayout 
        android:id="@+id/rl_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/bkg_rg"
        android:descendantFocusability="blocksDescendants"
        >
	    <ImageView 
	        android:id="@+id/iv_loan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/ic_credit"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_loan"
	        android:layout_alignTop="@id/iv_loan"
	        android:layout_marginTop="1dp"
	        android:textSize="17sp"
	        android:textStyle="bold"
	        android:text="融360贷款"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_title"
	        android:layout_toRightOf="@id/iv_loan"
	        android:layout_alignBottom="@id/iv_loan"
	        android:text="随时随地的比较贷款"
	        android:textSize="15sp"
	        android:textColor="@color/rong_detail_color"
	        android:gravity="bottom"
	        android:layout_marginBottom="2dp"
	        />
	    
	    
	    <Button 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="免费下载"
	        android:clickable="false"
	        android:focusable="false"
	        android:duplicateParentState="true"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:textSize="14sp"
	        android:textColor="@android:color/white"
	        android:background="@drawable/btn_round"
	        />
	    
    
    </RelativeLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_deep"
        />
    
</LinearLayout>