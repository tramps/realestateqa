<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="0dp"
    android:paddingBottom="8dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    <RelativeLayout 
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
	    <ImageView 
	        android:id="@+id/iv_hourse_left"
	        android:layout_marginTop="30dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="74dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_two_house"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_pay_left"
	        android:layout_below="@id/iv_hourse_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:layout_marginLeft="6dp"
	        android:textColor="@color/ratio_color"
	        android:textSize="14sp"
	        android:text="首付3成"
	         />
	    
	    <TextView 
	        android:id="@+id/tv_pay_rate_left"
	        android:layout_below="@id/tv_pay_left"
	        android:layout_alignLeft="@id/tv_pay_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="5.57%"
	        android:layout_marginTop="-3dp"
	        android:textSize="24sp"
	        android:textColor="@color/ratio_color"
	         />
	    
	    <TextView 
	        android:id="@+id/tv_pay_rate_left_detail"
	        android:layout_below="@id/tv_pay_left"
	        android:layout_toRightOf="@id/tv_pay_rate_left"
	        android:layout_alignBottom="@id/tv_pay_rate_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="bottom"
	        android:layout_marginBottom="2dp"
	        android:textSize="14sp"
	        android:text=" 85折  "/>
    
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/divider_vertical"
        />
    
    <RelativeLayout 
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
	    <ImageView 
	        android:id="@+id/iv_hourse_right"
	        android:layout_marginTop="30dp"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ic_two_house"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_pay_right"
	        android:layout_below="@id/iv_hourse_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:textColor="@color/ratio_color"
	        android:layout_marginLeft="16dp"
	        android:textSize="14sp"
	        android:text="首付7成"
	         />
	    
	    <TextView 
	        android:id="@+id/tv_pay_rate_right"
	        android:layout_below="@id/tv_pay_right"
	        android:layout_alignLeft="@id/tv_pay_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="7.21%"
	        android:layout_marginTop="-3dp"
	        android:textColor="@color/ratio_color"
	        android:textSize="24sp"
	         />
	    
	    <TextView 
	        android:id="@+id/tv_pay_rate_right_detail"
	        android:layout_below="@id/iv_hourse_right"
	        android:layout_toRightOf="@id/tv_pay_rate_right"
	        android:layout_alignBottom="@id/tv_pay_rate_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="bottom"
	        android:textSize="14sp"
	        android:layout_marginBottom="2dp"
	        android:text="  1.1倍"/>
    
    </RelativeLayout>
    
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_base"
        android:layout_marginTop="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基准利率：6.55%"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/base_ratio_color"
        />
</LinearLayout>