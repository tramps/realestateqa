    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ll_house"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_poll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    
    <Button 
        android:id="@+id/btn_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新计算"
        />

</LinearLayout>